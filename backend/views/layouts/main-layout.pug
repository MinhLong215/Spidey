include ../mixins/mixins

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="icon", href="/images/spidey.png", type="image/x-icon")
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.min.css')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
        link(rel="stylesheet", href="/css/main.css")
    body 
        script.
            var userLoggedIn = !{userLoggedInJs};
        .wrapper 
            .row 
                nav.col-2
                    a.red(href="/")
                        i.fa-solid.fa-spider
                    a(href="/")
                        i.fa-solid.fa-house
                    a(href="/search")
                        i.fa-solid.fa-magnifying-glass
                    a(href="/notifications")
                        i.fa-solid.fa-bell 
                        span#notificationBadge
                    a(href="/messages")
                        i.fa-solid.fa-envelope
                        span#messagesBadge
                    a(href="/profile")
                        i.fa-solid.fa-user
                    a(href="/logout")
                        i.fa-solid.fa-right-from-bracket
                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer 
                        h1 #{pageTitle}
                        block headerButton

                    block content 

                .d-none.d-md-block.col-md-2.col-lg-4
        #notificationList

        script(src='https://kit.fontawesome.com/a1814faeed.js' crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.7.1.min.js', integrity='sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.min.js')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
        script(src='https://cdn.socket.io/4.7.5/socket.io.min.js' integrity='sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO' crossorigin='anonymous')

        block scripts

        script(src="/js/common.js")
        script(src="/js/clientSocket.js")