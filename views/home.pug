extends layouts/main-layout.pug

block content
    // Kiểm tra xem `userLoggedIn` có được truyền và sử dụng đúng không
    if userLoggedIn
        p Welcome, #{userLoggedIn.username}
        +createPostForm(userLoggedIn)
    else
        p You are not logged in.
    .postsContainer

    +createPostModals(userLoggedIn)

block scripts
    script(src="/js/home.js")